<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9222"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/transparent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_dialog_def_top"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:tag="beta_title"
            android:text="更新提示"
            android:textColor="@color/black"
            android:textSize="@dimen/s13"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:tag="beta_upgrade_info"
            android:text="版本：1.0.0"
            android:textColor="@color/black"
            android:textSize="@dimen/s14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:lineSpacingExtra="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:tag="beta_upgrade_feature"
            android:text="包大小：9.6M"
            android:textColor="@color/black"
            android:textSize="@dimen/s14"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_dialog_def_left"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:tag="beta_cancel_button"
                android:text="下次再说"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/s13"
                android:textStyle="bold"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/select_dialog_def_right"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:tag="beta_confirm_button"
                android:text="立即更新"
                android:textColor="@color/title_bar_bg"
                android:textSize="@dimen/s13"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>