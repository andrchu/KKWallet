<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:divider="@drawable/shape_horizontal_line"
              android:dividerPadding="12dp"
              android:orientation="vertical"
              android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="支付确认"
            android:textColor="@color/black"
            android:textSize="@dimen/s13"/>

        <ImageView
            android:id="@+id/dstd_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/xx"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转入地址"
            android:textColor="@color/gray_l"
            android:textSize="@dimen/s14"/>

        <TextView
            android:gravity="right"
            android:id="@+id/dstd_to_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="test"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/dstd_2_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="矿  工  费"
            android:textColor="@color/gray_l"
            android:textSize="@dimen/s14"/>

        <TextView
            android:id="@+id/dstd_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="right"
            android:text="test"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金       额"
            android:textColor="@color/gray_l"
            android:textSize="@dimen/s14"/>

        <TextView
            android:id="@+id/dstd_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="right"
            android:text="10 SSS"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dstd_confirm"
        style="@style/button_style"
        android:text="@string/confirm_send"/>


</LinearLayout>