<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ipc_card_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/property_card_eth"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/ipc_card_name"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="wallet1"
            android:textColor="@color/white"
            android:textSize="@dimen/s13"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/ipc_show_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/hide_show_property"
                android:gravity="bottom"
                android:paddingTop="12dp"
                android:text="总资产(¥)"
                android:textColor="@color/white"
                android:textSize="@dimen/s13"/>

            <TextView
                android:id="@+id/ipc_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="≈0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/s11"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginBottom="12dp"
                android:id="@+id/ipc_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="地址:"
                android:textColor="@color/white"
                android:textSize="@dimen/s14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>