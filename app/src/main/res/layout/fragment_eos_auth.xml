<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/page_bg"
              android:orientation="vertical">

    <com.vip.wallet.widget.TitleBarView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:title="EOS授权"/>

    <FrameLayout
        android:id="@id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fea_success_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@drawable/shape_white_cir_rec"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="交易信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/s13"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="7.5dp"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_semicircle_right"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/eos_auth_line"/>

                    <View
                        android:layout_width="7.5dp"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_semicircle_left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转出账户："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/s14"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/fea_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="jinguodong12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转入账户："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/s14"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/fea_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="jinguodong12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金       额："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/s14"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/fea_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="jinguodong12"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s14"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备       注："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/s14"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/fea_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:singleLine="true"
                        android:text="七夕礼物"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s14"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/shape_white_cir_rec"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/fea_fresh"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/eos_sign_fresh"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="授权情况"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s13"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/fea_threshold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="阈值：3"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fea_auth_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</LinearLayout>