<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="left|center_vertical">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomRightRadius="7.5dp"
                android:topRightRadius="7.5dp"/>
            <solid android:color="@color/page_bg"/>
            <size
                android:width="7.5dp"
                android:height="15dp"/>
        </shape>
    </item>
    <item android:gravity="right|center_vertical">
        <shape
            android:shape="rectangle">
            <corners
                android:bottomLeftRadius="7.5dp"
                android:topLeftRadius="7.5dp"/>
            <solid android:color="@color/page_bg"/>
            <size
                android:width="7.5dp"
                android:height="15dp"/>
        </shape>
    </item>
    <item
        android:bottom="7dp"
        android:drawable="@drawable/eos_auth_line"
        android:gravity="center"
        android:top="7dp"/>
</layer-list>